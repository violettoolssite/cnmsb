#!/bin/sh
# cnmsb 安装后脚本

set -e

case "$1" in
    configure)
        # 创建符号链接
        ln -sf /usr/bin/cnmsb /usr/bin/cnmsb-sql 2>/dev/null || true
        ln -sf /usr/bin/cnmsb /usr/bin/cntmd 2>/dev/null || true
        
        echo ""
        echo "====================================="
        echo "  cnmsb (操你妈傻逼) 安装成功！"
        echo "====================================="
        echo ""
        echo "智能命令补全已安装。"
        echo ""
        echo "可用命令："
        echo "  cnmsb        - 命令行智能补全（自动生效）"
        echo "  cnmsb edit   - 打开智能补全编辑器"
        echo "  cntmd        - 打开智能补全编辑器（快捷命令）"
        echo "  cnmsb-sql    - SQL 智能补全客户端"
        echo ""
        echo "编辑器使用："
        echo "  cntmd myfile.txt"
        echo "  cnmsb edit myfile.txt"
        echo ""
        echo "启用补全："
        echo "  Zsh:  source /usr/share/cnmsb/cnmsb.zsh"
        echo ""
        echo "或在 ~/.zshrc 中添加："
        echo "  eval \"\$(cnmsb init zsh)\""
        echo ""
        ;;
esac

#DEBHELPER#

exit 0

